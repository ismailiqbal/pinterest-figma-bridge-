{
  "manifest_version": 3,
  "name": "Figpins",
  "version": "1.2",
  "description": "Seamlessly send high-res images from Pinterest to Figma",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "scripting",
    "activeTab",
    "storage" 
  ],
  "host_permissions": [
    "*://*.pinterest.com/*",
    "*://*.pinimg.com/*",
    "http://localhost:3333/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.pinterest.com/*"],
      "js": ["content.js"]
    }
  ]
}

{
  "manifest_version": 3,
  "name": "Figpins",
  "version": "2.0.0",
  "description": "Seamlessly send Pinterest images to Figma with metadata",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "identity",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.pinterest.com/*",
    "*://*.pinimg.com/*",
    "https://api.pinterest.com/*",
    "https://pinterest-figma-bridge.onrender.com/*",
    "http://localhost:3333/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.pinterest.com/*"],
      "js": ["content.js"]
    }
  ]
}
